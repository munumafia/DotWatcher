<Window x:Class="DotWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:valueConverters="clr-namespace:DotWatcher.ValueConverters"
        Title="DOT Visualizer" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="OpenMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer>
            <Image Source="{Binding Path=ImagePath, Converter={valueConverters:ImagePathConverter}}"></Image>
        </ScrollViewer>
    </StackPanel>
</Window>
